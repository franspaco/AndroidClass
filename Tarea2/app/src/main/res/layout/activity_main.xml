<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.franspaco.tarea2.MainActivity"
        android:orientation="vertical">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="315dp" app:srcCompat="@drawable/photo" android:id="@+id/imageView2"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="WriteSomething"
            android:ems="10"
            android:id="@+id/editText"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="Accion 1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/button" android:layout_weight="1"/>
        <Button
                android:text="Accion 2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/button2" android:layout_weight="1"/>
        <Button
                android:text="Accion 3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/button3" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
