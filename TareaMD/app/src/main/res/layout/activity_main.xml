<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.franspaco.tareamd.MainActivity" android:orientation="vertical">

    <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/but1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            android:text="Toast counter"
            android:onClick="onClick_Toaster"/>

    <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/but2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            android:text="Web View"
            android:onClick="onClick_WebView"/>

    <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/but3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            android:text="Calculator"
            android:onClick="onClick_Calculator"/>

    <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/but4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            android:text="Grades"
            android:onClick="onClick_Grades"/>

</LinearLayout>
